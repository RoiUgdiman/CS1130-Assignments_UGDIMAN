<!-- Assignment #1 -->
<div id="a1" class="tab" style="display:block;">
    <h2>Assignment #1 — Conversions</h2>

    <h3>Celsius to Fahrenheit</h3>
    <input id="c" type="number" placeholder="Enter Celsius">
    <button class="action" onclick="cToF()">Convert</button>
    <div id="cResult" class="result"></div>

    <h3>Fahrenheit to Celsius</h3>
    <input id="f" type="number" placeholder="Enter Fahrenheit">
    <button class="action" onclick="fToC()">Convert</button>
    <div id="fResult" class="result"></div>

    <h3>Meters to Feet</h3>
    <input id="m" type="number" placeholder="Enter Meters">
    <button class="action" onclick="mToFt()">Convert</button>
    <div id="mResult" class="result"></div>

    <h3>Feet to Meters</h3>
    <input id="ft" type="number" placeholder="Enter Feet">
    <button class="action" onclick="ftToM()">Convert</button>
    <div id="ftResult" class="result"></div>
</div>

<!-- Assignment #2 -->
<div id="a2" class="tab">
    <h2>Assignment #2 — Income Tax Calculator</h2>
    <input id="salary" type="number" placeholder="Enter Salary">
    <button class="action" onclick="calcTax()">Calculate</button>
    <div id="taxResult" class="result"></div>
</div>

<!-- Assignment #3 -->
<div id="a3" class="tab">
    <h2>Assignment #3 — Factorial, Sum, Average</h2>

    <input id="n" type="number" placeholder="Enter N">
    <button class="action" onclick="computeAll()">Compute</button>

    <div id="factorial" class="result"></div>
    <div id="sum" class="result"></div>
    <div id="average" class="result"></div>
</div>

<!-- Assignment #4 -->
<div id="a4" class="tab">
    <h2>Assignment #4 — Simple Payroll</h2>

    <input id="rate" type="number" placeholder="Hourly Rate">
    <input id="hours" type="number" placeholder="Hours Worked">
    <button class="action" onclick="payroll()">Compute Pay</button>

    <div id="payResult" class="result"></div>
</div>

<script>
function openTab(tab, btn) {
    document.querySelectorAll('.tab').forEach(t => t.style.display = "none");
    document.querySelectorAll('nav button').forEach(b => b.classList.remove("active"));

    document.getElementById(tab).style.display = "block";
    btn.classList.add("active");
}

/* Assignment 1 */
const cToF = () => {
    let c = parseFloat(document.getElementById("c").value);
    document.getElementById("cResult").innerText = (c * 9/5 + 32).toFixed(2) + " °F";
}

const fToC = () => {
    let f = parseFloat(document.getElementById("f").value);
    document.getElementById("fResult").innerText = ((f - 32) * 5/9).toFixed(2) + " °C";
}

const mToFt = () => {
    let m = parseFloat(document.getElementById("m").value);
    document.getElementById("mResult").innerText = (m * 3.28084).toFixed(2) + " ft";
}

const ftToM = () => {
    let ft = parseFloat(document.getElementById("ft").value);
    document.getElementById("ftResult").innerText = (ft / 3.28084).toFixed(2) + " m";
}

/* Assignment 2 */
const calcTax = () => {
    let salary = parseFloat(document.getElementById("salary").value);
    let tax = salary * 0.10;
    document.getElementById("taxResult").innerText = "Tax: ₱" + tax.toFixed(2);
}

/* Assignment 3 */
function computeAll() {
    let n = parseInt(document.getElementById("n").value);

    let fact = 1, i = 1;
    while (i <= n) { fact *= i; i++; }

    let s = 0, j = 1;
    do { s += j; j++; } while (j <= n);

    let total = 0;
    for (let k = 1; k <= n; k++) total += k;
    let avg = total / n;

    document.getElementById("factorial").innerText = "Factorial: " + fact;
    document.getElementById("sum").innerText = "Sum: " + s;
    document.getElementById("average").innerText = "Average: " + avg.toFixed(2);
}

/* Assignment 4 */
const payroll = () => {
    let rate = parseFloat(document.getElementById("rate").value);
    let hours = parseFloat(document.getElementById("hours").value);
    let pay = rate * hours;
    document.getElementById("payResult").innerText = "Total Pay: ₱" + pay.toFixed(2);
}
</script>

